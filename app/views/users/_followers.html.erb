
<% @user.followers.each do |f|%>

  <div class='position-relative'>
      <%= link_to user_path(f) do%>
      <div class='d-flex'>
          <div class='user-avatar-section'>
              <%if f.image.attached? %>
              <%= image_tag(f.image, size: '40x40', class: 'rounded-circle') %>
              <%else%>
              <div class='avatar'>
                <% if @user.image.attachment %>
                <%= image_tag(@user.image, size: '90x90', class: 'rounded-circle') %>
                <% else%>
                <%= image_tag('avatar.png', size: '90x90', class: 'rounded-circle') %>
                <% end%>
              </div>
              <%end%>
          </div>
          <div class='px-3 follow-text'>
              <p><%= f.name%></p>
              <h5 class='f-hashtag'>@<%= f.username%></h5>
          </div>
      </div>
      <%end%>
      <% if @user == current_user %>
      <% if true#current_user.following?(f) %>
      <div class='follow-btn f-profile'>
          <%#= link_to(user_follower_path(f), method: :delete) do%>
          <%#= image_tag 'https://image.flaticon.com/icons/svg/149/149146.svg' %>
          <%end%>
      </div>
      <%else %>
      <div class='follow-btn f-profile'>
          <%#= link_to(user_followers_path(f), method: :post) do%>
          <%#= image_tag 'https://image.flaticon.com/icons/svg/149/149145.svg' %>
          <%end%>
      </div>
      <%end%>
      <%#end%>
  </div>

<%#end%>
